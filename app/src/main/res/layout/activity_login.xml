<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.example.administrator.mengbaofushiji.view.LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="注册"
        android:layout_gravity="right"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.example.administrator.mengbaofushiji.extras.CircleImageView
            android:id="@+id/login_tubiao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:border_color="@color/white"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/baby4"
            ></com.example.administrator.mengbaofushiji.extras.CircleImageView>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white"
            ></View>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/denglu"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="输入用户名"
                android:padding="15dp"
                android:background="@null"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white"
            ></View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:padding="15dp"
                android:hint="请输入密码"
                android:background="@null"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white"
            ></View>
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:text="登录"
            android:gravity="center"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cicle_back_login"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/forget_password"
            android:layout_width="match_parent"
            android:text="忘记密码？"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:autoLink="web"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
