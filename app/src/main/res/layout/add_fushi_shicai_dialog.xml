<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="@drawable/cicle_back"
    android:layout_height="150dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:id="@+id/add_shicai_dialog_ed"
            android:hint="输入食材..."
            android:textColorHint="@color/gray"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/cicle_back_create_baby"
            android:padding="10dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/gray"
            android:layout_height="wrap_content" />
        <AutoCompleteTextView
            android:id="@+id/add_shicai_liang_dialog_ed"
            android:hint="输入量度..."
            android:textColorHint="@color/gray"
            android:completionThreshold="1"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/cicle_back_create_baby"
            android:padding="10dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/gray"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/revise_nick_record_dialog_bt_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="确定"
            android:gravity="center_horizontal"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_ui_shape_background_pressed_two"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/revise_nick_record_dialog_bt_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_ui_shape_background_pressed_two"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>