<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#5bbffd"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tools_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#a00"
            android:layout_height="wrap_content"
            android:text="工具"
            />
        <TextView
            android:id="@+id/seasoner_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"
            android:text="调味料"
            />
        <TextView
            android:id="@+id/nutrient_tv"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"
            android:text="营养素"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#500f"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tools_iv"
            android:layout_width="wrap_content"
            android:alpha="0.5"
            android:background="#f00"
            android:layout_height="5dp"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:background="#330a"
        android:layout_height="match_parent"
        android:id="@+id/school_vp"
        />
</LinearLayout>