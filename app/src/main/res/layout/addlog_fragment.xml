<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/no_logs_liner"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/gray"
			android:lineSpacingExtra="10dp"
			android:padding="40dp"
			android:text="亲~您还没有添加日志，请点击右下角的加号进行日志选择添加吧~"
			/>
	</LinearLayout>
	<ListView
		android:id="@+id/listview"
		android:layout_width="match_parent"
		android:scrollbars="none"
		android:layout_height="match_parent"/>
	<RelativeLayout
		android:id="@+id/retate_liner"
		android:layout_gravity="bottom|right"
		android:layout_width="120dp"
		android:visibility="invisible"
		android:background="@drawable/biji"
		android:layout_height="120dp">
		<TextView
			android:id="@+id/top_fushi"
			android:layout_width="match_parent"
			android:layout_height="50dp" />
		<TextView
			android:layout_below="@+id/top_fushi"
			android:id="@+id/bottom_suishouji"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</RelativeLayout>
	<com.example.administrator.mengbaofushiji.extras.CircleImageView
		android:id="@+id/add_logs"
		android:layout_width="48dp"
		android:layout_height="48dp"
		app:border_color="@color/white"
		app:border_width="0.1dp"
		android:layout_gravity="bottom|right"
		android:layout_marginBottom="10dp"
		android:layout_marginRight="10dp"
		android:src="@drawable/add_log_add_img"
		/>
</FrameLayout>