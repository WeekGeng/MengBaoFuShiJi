<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#11000000"
    android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/share_showalldata_lv"
            android:layout_below="@+id/liner"
            android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/share_fried_tv"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:text="好友分享"
                android:drawableTop="@drawable/friend_share"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/share_local_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近"
                android:drawableTop="@drawable/local_share"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/share_my_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的分享"
                android:drawableTop="@drawable/my_share"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>