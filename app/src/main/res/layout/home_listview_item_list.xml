<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="55dp"
        android:background="@drawable/cicle_back_create_baby"
        android:padding="5dp"
        android:id="@+id/home_frag_iv_list_left"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:layout_height="55dp" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/home_frag_tv_list_biaoti"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:text="早餐特色"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/home_frag_tv_list_biaoti"
            android:id="@+id/home_frag_tv_list_yindao"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:text="一日之计在于晨"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="24dp"
        android:id="@+id/home_frag_iv_list_right"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/xiangyou"
        />
</LinearLayout>