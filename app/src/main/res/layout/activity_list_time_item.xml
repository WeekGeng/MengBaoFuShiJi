<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    android:background="#220000aa" >

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_show_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline_month_day"
            android:gravity="center"
            android:text="2015"
            android:textSize="12sp" />
        <View android:id="@+id/shuxian"
            android:layout_width="1dp"
            android:layout_height="63dp"
            android:layout_marginLeft="-3dp"
            android:background="#A6A6A6"
            android:textSize="12sp" 
            />
    </RelativeLayout>
	
    <View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@+id/layout_1"
        android:layout_marginLeft="28dp"
        android:background="#A6A6A6" />

    <com.example.administrator.mengbaofushiji.extras.CircleImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/view_0"
        android:layout_marginLeft="10dp"
        android:src="@drawable/baby" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="200dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="28dp"
        android:background="#A6A6A6" />

    <RelativeLayout
        android:id="@+id/relative_one_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="-25dp"
        android:focusable="false"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/timeline_content"
        android:padding="10dp" >
         <TextView
            android:id="@+id/tv_show_month_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#220000aa"
            android:text="12/16 09:45"
            android:paddingLeft="10dp"
            android:textSize="12sp" />
		<TextView 
		    android:id="@+id/title_one_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:layout_below="@+id/tv_show_month_one"
            android:paddingLeft="5dp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="弹道导弹核潜艇法国后排和搜索家阿喀琉斯"
            android:textSize="12sp" 
		    />
        <TextView
            android:id="@+id/content_one_img"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/title_one_img"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:lines="4"
            android:text="弹道导弹核潜艇法国后排和搜索家阿喀琉斯"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/title_one_img"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:focusable="false"
            android:scaleType="fitXY"
            android:background="@drawable/cicle_back"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_two"
        android:layout_below="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:visibility="gone"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/timeline_content"
        android:padding="10dp" >
        <TextView
            android:id="@+id/tv_show_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#220000aa"
            android:text="12/16 09:45"
            android:paddingLeft="10dp"
            android:textSize="12sp" />
		<TextView 
		    android:id="@+id/title_two_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tv_show_month"
            android:singleLine="true"
            android:text="弹道导弹核潜艇法国后排和搜索家阿喀琉斯"
            android:textSize="12sp" 
		    />
        <TextView
            android:id="@+id/content_top"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:layout_below="@+id/title_two_img"
            android:singleLine="true"
            android:text="弹道导弹核潜艇法国后排和搜索家阿喀琉斯"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv2_1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/content_top"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:padding="4dp"
            android:background="@drawable/cicle_back"
            android:src="@drawable/a" />

        <ImageView
            android:id="@+id/iv2_2"
            android:layout_width="110dp"
            android:padding="4dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/title_two_img"
            android:scaleType="fitXY"
            android:background="@drawable/cicle_back"
            android:src="@drawable/b" />
        <TextView 
            android:id="@+id/content_bottom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:layout_below="@+id/iv2_2"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="弹道导弹核潜艇法国后排和搜索家阿喀琉斯"
            android:textSize="12sp"
            />
    </RelativeLayout>

</RelativeLayout>