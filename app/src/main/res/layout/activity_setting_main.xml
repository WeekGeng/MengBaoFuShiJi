<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#2200aaaa"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relative"
        android:background="#800a"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="40dp"
            android:src="@drawable/back_seting"
            android:layout_height="40dp"
            android:scaleType="centerInside"

            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/setting_center"
            android:textSize="18sp"
            android:text="设置中心"
            />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/relative"
    android:orientation="vertical"
     >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:id="@+id/clear_catch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#fff"
                android:padding="10dp"
                android:text="清除缓存"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_show_catch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="(0.10M)"
                android:textSize="16sp" />
        </LinearLayout>
        <com.example.administrator.mengbaofushiji.overrideview.MyListView
            android:id="@+id/lv_show_list"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            />
        <TextView 
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注     销"
            android:textColor="#700f"
            android:padding="8dp"
            android:textSize="16sp"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

</ScrollView>
</RelativeLayout>