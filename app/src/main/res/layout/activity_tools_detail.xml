<RelativeLayout
    android:id="@+id/tools_detail_dragtoplayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.example.administrator.mengbaofushiji.extras.FoodDetailScrollView
        android:id="@+id/tools_detail_sv"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tools_a_d"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="-40dp"
                android:background="#8000"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200元"
                    android:paddingTop="10dp"
                    android:drawableLeft="@drawable/renminbi"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="旅行盒套装"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/shanpinmiaoshu"
                android:drawableRight="@drawable/shanpinmiaoshu"
                android:textColor="#9f00"
                android:gravity="center_horizontal"
                android:text="商品描述"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:padding="10dp"
                android:lineSpacingExtra="5dp"
                android:text="飞利浦新安怡的这款辅食机也是相当好用的一款，相比Beaba来说价格更适中，使用起来也非常省心，先蒸煮，再翻转即可打泥，不用再几个容器倒腾来倒腾去，弄的哪里都是，或者手忙脚乱，从食材放入都收获泥糊一气呵成，最后倒出来就能直接喂给宝宝吃，是给宝宝添加健康辅食不可或缺的得力助手。"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/tools_a_a"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerInside"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/tools_a_b"
                android:scaleType="centerInside"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/tools_a_a"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerInside"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/tools_a_b"
                android:scaleType="centerInside"
                />
        </LinearLayout>
    </com.example.administrator.mengbaofushiji.extras.FoodDetailScrollView>
    <include layout="@layout/toolbar_tools_details"></include>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系卖家"
        android:layout_above="@+id/buy_buttom"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:textSize="12sp"
        android:paddingBottom="8dp"
        android:background="@drawable/cicle_back_chat"
        />
    <LinearLayout
        android:id="@+id/buy_buttom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#4000"
        android:padding="5dp"
        >
        <TextView
            android:text="收藏"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/heart"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/add_to_gouwuche"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="加入购物车"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:textColor="@color/gray"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/buy_now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="立即购买"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:background="#9f00"
            />
    </LinearLayout>
</RelativeLayout>