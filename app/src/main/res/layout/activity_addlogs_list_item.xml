<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="#100a" >
    <ImageView
        android:id="@+id/add_log_iv_del"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:visibility="gone"
        android:src="@drawable/add_log_del"
        />
    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/addlogs_tv_show_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline_month_day"
            android:gravity="center"
            android:text="2015"
            android:textSize="12sp" />

        <View
            android:id="@+id/shuxian"
            android:layout_width="1dp"
            android:layout_height="63dp"
            android:layout_marginLeft="-3dp"
            android:background="#4000"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@+id/layout_1"
        android:layout_marginLeft="28dp"
        android:background="#4000" />

    <com.example.administrator.mengbaofushiji.extras.CircleImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/view_0"
        android:layout_marginLeft="10dp"
        android:src="@drawable/baby" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relative_one_img"
        android:layout_below="@+id/image"
        android:layout_marginBottom="-20dp"
        android:layout_marginLeft="28dp"
        android:background="#4000"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/relative_one_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-25dp"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/timeline_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/addlogs_tv_show_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="12/16 09:45"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="宝宝4个月大了"
            android:textSize="14sp" />
		
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="#3000"
            android:layout_below="@+id/addlogs_tv_show_month"/>
        <TextView
            android:id="@+id/addlogs_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="弹道导弹核潜艇法国"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/huanrao_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addlogs_title_tv"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
			<HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_marginLeft="5dp"
                android:focusable="false"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/test_image1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/c" />

                    <ImageView
                        android:id="@+id/test_image2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/c" />
                </LinearLayout>

            </HorizontalScrollView>
            <TextView
                android:id="@+id/addlogs_tv_show_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="那就少弄点饭就能进淡定福建农大附近呢的浓度发生浓缩的覅哦的烦恼的烦恼东方尿片的烦恼多废话【 东方红i哦东方红i哦到地方接受电话iOS的v号iOS的v速度v女生DVI速度v 你看vifvi偶读说说说的v 所受的vi哦 囧死屌丝大 iOS地欧舒丹viOSDVI欧舒丹v" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/huanrao_liner"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.example.administrator.mengbaofushiji.extras.CircleImageView
                    android:id="@+id/andlogs_iv_tools"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:padding="5dp"
                    android:focusable="false"
                    android:src="@drawable/c"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="工具"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.example.administrator.mengbaofushiji.extras.CircleImageView
                    android:id="@+id/andlogs_iv_tiaoweiliao"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:padding="5dp"
                    android:focusable="false"
                    android:src="@drawable/b" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="调味料"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>