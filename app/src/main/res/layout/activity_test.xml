<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mengbaofushiji.view.TestActivity">
    <com.example.administrator.mengbaofushiji.extras.PagerSlidingTabStrip
        android:id="@+id/tools_detail_tabs"
        android:layout_width="match_parent"
        app:pstsIndicatorColor="@color/red"
        app:pstsUnderlineHeight="1dp"
        app:pstsIndicatorHeight="5dp"
        android:layout_height="40dip" >
    </com.example.administrator.mengbaofushiji.extras.PagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/tools_detail_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>
