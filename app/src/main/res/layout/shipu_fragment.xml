<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.administrator.mengbaofushiji.extras.PagerSlidingTabStrip
        android:id="@+id/shipu_tabs"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        app:pstsIndicatorColor="@color/theme_color"
        app:pstsIndicatorHeight="5dp"
        android:layout_height="48dip" >
    </com.example.administrator.mengbaofushiji.extras.PagerSlidingTabStrip>
    <RelativeLayout
        android:layout_below="@+id/shipu_tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/shipu_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/right_functon"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_marginRight="-168dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_function"
                android:layout_width="35dp"
                android:layout_height="96dp"
                android:gravity="center"
                android:lineSpacingExtra="10dp"
                android:textSize="16sp"
                android:background="#8f00"
                android:layout_gravity="center_vertical|right"
                android:text="功\n能"
                android:textColor="@color/white"
                />
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ListView
                    android:id="@+id/lv_function"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ListView>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>