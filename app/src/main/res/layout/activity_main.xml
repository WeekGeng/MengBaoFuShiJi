<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include layout="@layout/toolbar" />
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_marginBottom="-15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/content"
            android:layout_height="match_parent">

        </FrameLayout>
        <ScrollView
            android:layout_width="250dp"
            android:layout_gravity="start"
            android:background="#6000"
            android:scrollbars="none"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/drawer_view"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:layout_height="wrap_content"
                        android:text="个人资料"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cebian_message"
                        android:background="@null"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#9fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    >
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="头像"
                        android:textColor="#3fff"
                        android:layout_marginLeft="15dp"
                        />
                    <com.example.administrator.mengbaofushiji.extras.CircleImageView
                        android:id="@+id/cebian_person_img"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/cebian_baobao_img"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_liner_nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textColor="#3fff"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/cebian_person_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="哈哈哈"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#9fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    >
                </View>
                <LinearLayout
                    android:id="@+id/home_liner_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="好友分享"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        />
                    <ImageView
                        android:id="@+id/cebian_biji_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cebian_biji_img"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="快来摇一摇"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        />
                    <ImageView
                        android:id="@+id/cebian_yaoyiyao_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cebian_yaoyiyao"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#9fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    >
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="我的订单"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/cebian_dingdan_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="我的关注"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/cebian_guanzhu_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="我的收藏"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/cebian_shoucang_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:gravity="center_vertical"-->
                    <!-->-->
                    <!--<TextView-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_weight="1"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="我的发布"-->
                        <!--android:textColor="#fff"-->
                        <!--android:layout_marginLeft="15dp"-->
                        <!--/>-->
                    <!--<TextView-->
                        <!--android:id="@+id/cebian_fabu_tv"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="#fff"-->
                        <!--android:text="0"-->
                        <!--/>-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:drawableRight="@drawable/xiangyou"-->
                        <!--/>-->
                <!--</LinearLayout>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#9fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    >
                </View>
                <com.example.administrator.mengbaofushiji.extras.DrawableCenterTextView
                    android:id="@+id/my_setting_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="系统设置"
                    android:textColor="#8fff"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:drawableLeft="@drawable/cebian_settings"
                    />
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.DrawerLayout>
    <LinearLayout
        android:background="#0000"
        android:layout_marginBottom="-20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66a08f90"
                android:layout_marginTop="11.5dp"
                ></View>
            <TextView
                android:id="@+id/shouye"
                android:text="首页"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:layout_marginBottom="11dp"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="0dp"
                android:drawableTop="@drawable/shouye"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66a08f90"
                android:layout_marginTop="11.5dp"
                ></View>
            <TextView
                android:id="@+id/shipu"
                android:text="食谱"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="0dp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/shipu"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="80dp"
            android:background="@drawable/banner_middle"
            android:layout_height="80dp">
            <com.example.administrator.mengbaofushiji.extras.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/add_logs"
                app:border_color="#a08f90"
                app:border_width="1dp"
                android:layout_centerInParent="true"
                android:src="@drawable/addimg"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66a08f90"
                android:layout_marginTop="11.5dp"
                ></View>
            <TextView
                android:id="@+id/ketang"
                android:text="课堂"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:textColor="@color/gray"
                android:background="@color/white"
                android:layout_height="0dp"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/ketang"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66a08f90"
                android:layout_marginTop="11.5dp"
                ></View>
            <TextView
                android:id="@+id/share"
                android:text="分享"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="0dp"
                android:paddingTop="10dp"
                android:background="@color/white"
                android:drawableTop="@drawable/share"
                android:layout_marginBottom="10dp"
                android:textColor="@color/gray"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
