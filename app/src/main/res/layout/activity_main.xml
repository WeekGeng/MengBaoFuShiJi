<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include layout="@layout/toolbar" />
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1" >
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/content"
            android:layout_height="match_parent">

        </FrameLayout>
        <ScrollView
            android:layout_width="250dp"
            android:layout_gravity="start"
            android:background="#2000"
            android:scrollbars="none"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/drawer_view"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:layout_height="wrap_content"
                        android:text="个人资料"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cebian_message"
                        android:background="@null"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#9fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    >
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="头像"
                        android:textColor="#3fff"
                        android:layout_marginLeft="15dp"
                        />
                    <com.example.administrator.mengbaofushiji.extras.CircleImageView
                        android:id="@+id/cebian_person_img"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/cebian_baobao_img"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_liner_nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textColor="#3fff"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/cebian_person_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="哈哈哈"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#9fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    >
                </View>
                <LinearLayout
                    android:id="@+id/home_liner_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="好友分享"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        />
                    <ImageView
                        android:id="@+id/cebian_biji_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cebian_biji_img"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="快来摇一摇"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        />
                    <ImageView
                        android:id="@+id/cebian_yaoyiyao_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cebian_yaoyiyao"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#9fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    >
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="我的关注"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/cebian_guanzhu_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="我的收藏"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/cebian_shoucang_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="我的发布"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/cebian_fabu_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/xiangyou"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#9fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    >
                </View>
                <com.example.administrator.mengbaofushiji.extras.DrawableCenterTextView
                    android:id="@+id/my_setting_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="系统设置"
                    android:textColor="#8fff"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:drawableLeft="@drawable/cebian_settings"
                    />
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.DrawerLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaa0"
        android:layout_marginBottom="-10dp"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-10dp"
        android:layout_height="55dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/shouye"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:text="主页"
            android:textColor="#5000"
            android:drawableTop="@drawable/shouye"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:id="@+id/shipu"
            android:text="食谱"
            android:drawableTop="@drawable/shipu"
            android:textSize="16sp"
            android:textColor="#5000"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="48dp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:src="@drawable/addimg"
            android:id="@+id/add_logs"
            android:layout_height="48dp"
            />
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#5000"
            android:textSize="16sp"
            android:id="@+id/ketang"
            android:layout_gravity="bottom"
            android:drawableTop="@drawable/ketang"
            android:text="课堂"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/share"
            android:textColor="#5000"
            android:textSize="16sp"
            android:layout_gravity="bottom"
            android:drawableTop="@drawable/share"
            android:text="分享"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
