<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/allback"
    tools:context=".MainActivity">
    <include layout="@layout/toolbar" />
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1" >
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/content"
            android:layout_height="match_parent">

        </FrameLayout>
        <LinearLayout
            android:id="@+id/drawer_view"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:background="@drawable/toolbar_bac"
            android:padding="8dp" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.administrator.mengbaofushiji.extras.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher"
                    android:layout_marginLeft="10sp"
                    app:border_width="2dp"
                    app:border_color="@android:color/white"
                    />
                <TextView
                    android:id="@+id/toolbar_tv_showname"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="UserName"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                />
            <ListView
                android:id="@+id/lv_person_ziliao"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/backdaohang"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/shouye"
            android:drawableTop="@drawable/shouye"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:text="主页"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:id="@+id/shipu"
            android:drawableTop="@drawable/shipu"
            android:text="辅食"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <com.example.administrator.mengbaofushiji.extras.CircleImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:src="@drawable/middleadd"
            android:id="@+id/add_logs"
            android:layout_height="wrap_content"
             />
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:id="@+id/ketang"
            android:layout_gravity="bottom"
            android:drawableTop="@drawable/luntan"
            android:text="课堂"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/share"
            android:textSize="18sp"
            android:layout_gravity="bottom"
            android:drawableTop="@drawable/share"
            android:text="分享"
            android:layout_height="wrap_content" />
        </LinearLayout>
