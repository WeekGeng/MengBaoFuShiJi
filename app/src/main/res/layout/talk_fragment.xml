<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:layout_width="fill_parent"
        android:id="@+id/talk_frag_rg"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="0dp"
            android:id="@+id/talk_frag_btn_fushi"
            android:layout_weight="1"
            android:button="@null"
            android:text="辅食专区"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/talk_frag_btn_yunying"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="孕婴专区"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:button="@null"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/talk_frag_btn_yuezi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="月子专区"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:button="@null"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/talk_frag_btn_baifenbai"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="专家问答"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:button="@null"
            android:layout_height="wrap_content" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="5dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/talk_frag_iv_fushi"
                android:src="#000"
                android:visibility="visible"
                android:layout_height="2dp" />
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/talk_frag_iv_yunying"
                android:layout_weight="1"
                android:src="#000"
                android:visibility="invisible"
                android:layout_height="2dp" />
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/talk_frag_iv_yuezi"
                android:layout_weight="1"
                android:visibility="invisible"
                android:src="#000"
                android:layout_height="2dp" />
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/talk_frag_iv_wenda"
                android:layout_weight="1"
                android:visibility="invisible"
                android:src="#000"
                android:layout_height="2dp" />
      </LinearLayout>
     <android.support.v4.view.ViewPager
            android:id="@+id/talk_frag_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>

</LinearLayout>